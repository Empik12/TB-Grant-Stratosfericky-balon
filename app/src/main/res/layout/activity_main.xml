<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fiit.baranek.tomas.gpssky.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <Button

            android:layout_width="245dp"
            android:layout_height="61dp"
            android:text="Basic settings"
            android:onClick="BasicSettings"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:text="Sharing settings"
            android:onClick="SharingSettings"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:text="SMS notification settings"
            android:id="@+id/button3"
            android:onClick="SMSSettings"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/buttonEND"
            android:layout_gravity="right"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:onClick="Start"
            android:id="@+id/buttonStart"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Provider"
            android:id="@+id/Provider"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Longitude"
            android:id="@+id/Longitude"
            android:layout_weight="0.05" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Atitude"
            android:id="@+id/Atitude"
            android:layout_gravity="right"
            android:layout_weight="0.05" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Latitude"
            android:id="@+id/Latitude"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />

    </LinearLayout>
</RelativeLayout>
